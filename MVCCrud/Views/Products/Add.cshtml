@model MVCCrud.Models.AddProductsModel
@{
}
<head>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</head>
<form method="post" action="Add">
    <div class="mb-3">
        <label for="" class="form-label">Product Name</label>
        @Html.TextBoxFor(x => x.ProductName, new {@class = "form-control", @required = true})
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Category Id</label>
        @Html.DropDownListFor(x => x.CategoryId, Model.Category, "Chooes Category" ,new {@class = "form-control",@required = true} )
        
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Category Name</label>
        @Html.TextBoxFor(x => x.CategoryName, new {@class = "form-control", @required = true})
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>

    
</form>

<script>
    $(document).ready(function () {
        $("#CategoryId").on("change", function () {
            $("#CategoryName").val($("#CategoryId option:selected").text());
        });
    });
</script>