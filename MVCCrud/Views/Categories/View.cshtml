@model MVCCrud.Models.UpdateCategoriesModel
@{
}

<form method="post" action="View">
    <div class="mb-3">
        <label for="" class="form-label">Category Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Category Name</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Categories">Delete</button>
</form>